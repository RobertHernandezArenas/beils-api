{
	"compilerOptions": {
		"target": "ESNext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "NodeNext",
		"rootDir": "api",
		"moduleResolution": "Node16",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./api/*"],
			"@adapters/*": ["./api/adapters/*"],
			"@Cart/*": ["./api/components/Cart/*"],
			"@components/*": ["./api/components/*"],
			"@config/*": ["./api/config/*"],
			"@database/*": ["./api/database/*"],
			"@GiftCard/*": ["./api/components/GiftCard/*"],
			"@Product/*": ["./api/components/Product/*"],
			"@router/*": ["./api/v1/router/*"],
			"@Service/*": ["./api/components/Service/*"],
			"@User/*": ["./api/components/User/*"],
			"@utils/*": ["./api/utils/*"]
		},
		"outDir": "dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
