{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2023",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": "api",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./api/*"],
			"@domain/*": ["./api/domain/*"],
			"@dtos/*": ["./api/application/dtos/*"],
			"@entities/*": ["./api/domain/entities/*"],
			"@adapters/*": ["./api/adapters/*"],
			"@cart/*": ["./api/components/Cart/*"],
			"@components/*": ["./api/components/*"],
			"@config/*": ["./api/config/*"],
			"@database/*": ["./api/database/*"],
			"@giftCard/*": ["./api/components/GiftCard/*"],
			"@interface/*": ["./api/interface/*"],
			"@product/*": ["./api/components/Product/*"],
			"@router/*": ["./api/router/*"],
			"@service/*": ["./api/components/Service/*"],
			"@user/*": ["./api/components/User/*"],
			"@customer/*": ["./api/components/customer/*"],
			"@utils/*": ["./api/utils/*"]
		},
		"outDir": "dist/",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["api/**/*"]
}
